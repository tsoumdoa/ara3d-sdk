<Window x:Class="Ara3D.BimOpenSchema.Browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ara3D.DataSetBrowser.WPF"
        mc:Ignorable="d"
        Icon="ara3d.ico"
        Title="BIM Open Schema Browser - from Ara 3D" Height="450" Width="800">
	<!-- DockPanel keeps the Menu pinned to the top and the TabControl fills the rest -->
	<DockPanel>

		<!-- Menu bar -->
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Open …" Click="Open_Click">
				</MenuItem>
				<MenuItem Header="_Export Raw Parquet …" Click="ExportParquet_Click">
				</MenuItem>
				<MenuItem Header="_Export Excel …" Click="ExportExcel_Click">
				</MenuItem>
				<MenuItem Header="_Export GLB …" Click="ExportGLB_Click">
				</MenuItem>
			</MenuItem>
			<MenuItem x:Name="GroupingMenuItem" Header="_Grouping">
			</MenuItem>
			<MenuItem x:Name="Option" Header="_Options">
				<MenuItem x:Name="IncludeParamsMenuItem" Header="_Include Parameters"
				    IsCheckable="True"
					IsChecked="False"
					Click="IncludeParamsMenuItem_OnClick"/>
			</MenuItem>
		</Menu>

		<!-- Your existing content -->
		<TabControl x:Name="TabControl"/>
	</DockPanel>
</Window>
